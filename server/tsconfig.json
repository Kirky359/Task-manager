{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "../dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "controllers",
    "services",
    "types",
    "models",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
